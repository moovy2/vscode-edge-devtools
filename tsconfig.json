{
    "compilerOptions": {
        // VS Code 1.53 is based on Node 12.18.3 which has compat up to ES2020.
        "module": "ES2020",
        "target": "ES2020",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ]
}
